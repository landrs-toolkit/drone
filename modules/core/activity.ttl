@prefix drone: <https://w3id.org/drone/ont/> .
@prefix dronesh: <https://w3id.org/drone/shapes/shacl/> .
@base <https://w3id.org/drone/ont/> .


<https://w3id.org/drone/ont/module/activity> rdf:type oplax:Module  ;
              rdfs:comment "Drone core module for Events and Activities";
              skos:note "Was extracted from the OGC Testbed 16: Aviation Engineering Report";
              rdfs:seeAlso <https://docs.ogc.org/per/20-020.html#_flight_ontology> 
.
drone:Activity
  a owl:Class ;
  rdfs:label "Activity"@en;
  skos:definition "An activity is something that occurs over a period of time and acts upon or with entities; it may include consuming, processing, transforming, modifying, relocating, using, or generating entities."@en ;
  prov:wasQuotedFrom "https://www.w3.org/TR/prov-o/#Activity";
  rdfs:subClassOf time:TemporalEntity ;
    rdfs:subClassOf [
      a owl:Restriction ;
      owl:maxCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty drone:hasEndEvent ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:maxCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty drone:hasStartEvent ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "0"^^xsd:nonNegativeInteger ;
      owl:onProperty drone:hasEvent ;
    ] ;
  owl:equivalentClass prov:Activity ;
.
drone:Event
  a owl:Class ;
  rdfs:label "Event" ;
  skos:definition "An instantaneous event, or event for short, happens in the world and marks a change in the world, in its activities and in its entities."@en ;
  prov:wasQuotedFrom "https://www.w3.org/TR/prov-o/#InstantaneousEvent"@en;
  rdfs:subClassOf time:TemporalEntity ;
  owl:equivalentClass prov:InstantaneousEvent ;
.

drone:Configuration
  a owl:Class;
  rdfs:label "Configuration" ;
  skos:definition "set of modifiable parameters of an engineered system, or their values, that allow it to support a particular function"@en;
  skos:exactMatch wd:Q7663702;
.

drone:hasEndEvent
  a owl:ObjectProperty ;
  rdfs:label "hasEndEvent" ;
  rdfs:subPropertyOf drone:hasEvent ;
.
drone:hasEvent
  a owl:ObjectProperty ;
  rdfs:label "hasEvent" ;
  rdfs:range drone:Event ;
.
drone:hasStartEvent
  a owl:ObjectProperty ;
  rdfs:label "hasStartEvent" ;
  rdfs:range drone:Event ;
  rdfs:subPropertyOf drone:hasEvent ;
.
drone:hasSubactivity
  a owl:ObjectProperty ;
  rdfs:domain drone:Activity ;
  rdfs:label "hasSubactivity" ;
  rdfs:range drone:Activity ;
  rdfs:subPropertyOf drone:hasPart ;
.
drone:subActivityOf
  a owl:ObjectProperty ;
  rdfs:domain drone:Activity ;
  rdfs:label "subActivityOf" ;
  rdfs:range drone:Activity ;
  rdfs:subPropertyOf drone:partOf ;
.

