@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .


drone-sh:ConditionShape
  a sh:NodeShape ;
  sh:targetClass landrs:Condition ;
# mandatory properties
  sh:property [
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );    
    sh:name "Comment" ;
    sh:description "For example, to state that a Sensor has a particular accuracy under that Condition." ;
    sh:path rdfs:comment ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    #sh:resultMessage "TODO." ;
    sh:order 0 ;
  ] ;
  sh:property [
    sh:path schema:minValue;
    sh:datatype xsd:decimal ;
    #sh:datatype schema:Number ;
    sh:name "Minimum Value" ;
    sh:description "The upper value of some characteristic or property." ;    
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    #sh:resultMessage "TODO." ;
    sh:order 1 ;
  ] ;
  sh:property [
    sh:path schema:maxValue; 
    sh:datatype xsd:decimal ;
    #sh:datatype schema:Number ;
    sh:name "Maximum Value" ;
    sh:description "The upper value of some characteristic or property." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    #sh:resultMessage "TODO." ;
    sh:order 2 ;
  ] ;
  sh:property [
    sh:path schema:unitCode;
    sh:nodeKind sh:IRI ;
    sh:name "Unit of measurement " ;
    sh:description "The unit of measurement given using the UN/CEFACT Common Code (3 characters) or a URL." ;    
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    #sh:resultMessage "TODO." ;
    sh:order 3 ;
  ] .

  landrs:UAVShape
  a sh:NodeShape ;
  sh:targetClass landrs:UAV;
  sh:property [
    sh:path td:title ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Title" ;
    sh:description "The title of the UAV." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 0 ;
  ] ;
  sh:property [
    sh:path schema:name ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Name" ;
    sh:description "The name of the UAV." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 1 ;
  ] ;
  sh:property [
    sh:path eqp:aircraftSerialNumber ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Aircraft Serial Number" ;
    sh:description "The manufacturer serial number of the aircraft." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 2 ;
  ] ;
  sh:property [
    sh:path eqp:aircraftTypeDesignator ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Aircraft Type Designator" ;
    sh:description "The type designator code for this type of aircraft (e.g., B777)." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 3 ;
  ] ;
  sh:property [
    sh:path schema:Brand ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Brand" ;
    sh:description "A name used by an organization or business person for labeling the UAV." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 4 ;
  ] ;
  sh:property [
    sh:path schema:model ;
    sh:or ( [ sh:datatype xsd:string ; ]
      [ sh:datatype rdf:langString ; ] );
    sh:name "Model" ;
    sh:description "The model of the UAV." ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:resultSeverity sh:Violation ;
    sh:order 5 ;
  ] .